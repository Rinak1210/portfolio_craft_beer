<h3>投稿編集</h3>
<div class="form">
  <%= form_with model: @craft_beer_shop,local: true do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :images, class: "form-label" %>
      <%= form.file_field :images, multiple: true %>
    </div>

    <div>
      <%= form.submit "投稿を更新する", class: "btn btn-primary" %>
    </div>
    <%= link_to "投稿一覧へ戻る", craft_beer_shops_path, class: "btn btn-light btn-outline-secondary" %>
  <% end %>
</div>
