<h1>ユーザー登録情報</h1>
<%= flash[:notice] %>
<div class = "container">
  <p>ユーザーネーム：<%= @user.name %></p>
  <p>メールアドレス：<%= @user.email %></p>
  <%= link_to "新規投稿する", new_craft_beer_shop_path, class: 'btn btn-primary' %>
  <p><%= button_to 'ログアウト', logout_path, method: :delete, data: { confirm: 'ログアウトしますか？' } %></p>
  <p><%= button_to '退会', unsubscribe_path(@user), method: :delete, data: { confirm: '本当に退会しますか？' } %></p>
</div>
